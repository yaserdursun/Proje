                <span asp-validation-for="Question3.B" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Question3.D" type="text" class="form-control" placeholder="D">
                <span asp-validation-for="Question3.D" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-3 col-md-offset-5">
                    <div class="form-group">
                        <select asp-for="Question3.Answer" asp-items="@Model.AnswerOptions" class="form-control"></select>
                    </div>
                </div>
