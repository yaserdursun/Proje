            <div class="form-group">
                <input asp-for="Question4.Detail" type="text" class="form-control" placeholder="Soru 4">
                <span asp-validation-for="Question4.Detail" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input asp-for="Question4.A" type="text" class="form-control" placeholder="A">
                <span asp-validation-for="Question4.A" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Question4.C" type="text" class="form-control" placeholder="C">
                <span asp-validation-for="Question4.C" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <input asp-for="Question4.B" type="text" class="form-control" placeholder="B">
                <span asp-validation-for="Question4.B" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Question4.D" type="text" class="form-control" placeholder="D">
                <span asp-validation-for="Question4.D" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-3 col-md-offset-5">
                    <div class="form-group">
                        <select asp-for="Question4.Answer" asp-items="@Model.AnswerOptions" class="form-control"></select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2 col-md-offset-5">
            <button type="submit" class="btn btn-primary">Sınav Oluştur</button>
